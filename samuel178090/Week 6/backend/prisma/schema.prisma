// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  UID         String   @id @default(uuid())
  firstName   String
  LastName    String
  phone       String   @unique
  email       String   @unique
  username    String   @unique
  password    String
  nationalID  String   @unique
  birthdate   DateTime
  balance     Float    @default(0.0)
  isActive    Boolean  @default(true)
  role        String   @default("USER")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  sentTransactions     Transaction[] @relation("SenderTransactions")
  receivedTransactions Transaction[] @relation("ReceiverTransactions")
  virtualCreditCards   VirtualCreditCard[]
  subaccounts          Subaccount[]
  notifications        Notification[]
  auditLogs            AuditLog[]

  @@map("users")
}

model Subaccount {
  UID       String   @id @default(uuid())
  parentUID String
  firstName String
  LastName  String
  phone     String   @unique
  email     String   @unique
  username  String   @unique
  password  String
  balance   Float    @default(0.0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  parent               User          @relation(fields: [parentUID], references: [UID], onDelete: Cascade)
  sentTransactions     Transaction[] @relation("SubaccountSenderTransactions")
  receivedTransactions Transaction[] @relation("SubaccountReceiverTransactions")

  @@map("subaccounts")
}

model Transaction {
  id              String   @id @default(uuid())
  senderUID       String?
  receiverUID     String?
  subaccountUID   String?
  amount          Float
  status          String   @default("PENDING")
  transactionType String
  description     String?
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  // Relations
  sender      User?       @relation("SenderTransactions", fields: [senderUID], references: [UID])
  receiver    User?       @relation("ReceiverTransactions", fields: [receiverUID], references: [UID])
  subaccount  Subaccount? @relation("SubaccountSenderTransactions", fields: [subaccountUID], references: [UID], map: "transactions_subaccount_sender_fkey")
  subReceiver Subaccount? @relation("SubaccountReceiverTransactions", fields: [subaccountUID], references: [UID], map: "transactions_subaccount_receiver_fkey")

  @@map("transactions")
}

model VirtualCreditCard {
  id               String    @id @default(uuid())
  userUID          String
  cardNumber       String    @unique
  amount           Float
  creditCardType   String
  expirationDate   DateTime
  verificationCode Int
  isActive         Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userUID], references: [UID], onDelete: Cascade)

  @@map("virtual_credit_cards")
}

model Notification {
  id        String   @id @default(uuid())
  userUID   String
  title     String
  message   String
  type      String   @default("INFO")
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userUID], references: [UID], onDelete: Cascade)

  @@map("notifications")
}

model AuditLog {
  id        String   @id @default(uuid())
  userUID   String?
  action    String
  details   String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  // Relations
  user User? @relation(fields: [userUID], references: [UID])

  @@map("audit_logs")
}