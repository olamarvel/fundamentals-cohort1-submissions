					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"senderId\": \"1\",\n  \"recipientPhone\": \"01234567891\",\n  \"amount\": 100\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/transactions/send-money/phone",
							"host": ["{{baseUrl}}"],
							"path": ["transactions", "send-money", "phone"]
