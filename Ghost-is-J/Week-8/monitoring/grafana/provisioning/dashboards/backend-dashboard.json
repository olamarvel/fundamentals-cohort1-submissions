{
  "id": null,
  "title": "DeployHub Backend Observability",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Uptime (seconds)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "service_uptime_seconds",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Total Requests",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(http_requests_total)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Total Errors (5xx)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(http_errors_total)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "graph",
      "title": "Requests per Second (RPS)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Error Rate (5xx) per Route",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_errors_total[5m])",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Request Duration (Histogram p50, p90, p99)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.90, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p90",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "gridPos": { "x": 0, "y": 10, "w": 24, "h": 7 }
    },
    {
      "type": "graph",
      "title": "Status Code Breakdown",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_count[1m])) by (status_code)",
          "legendFormat": "Status {{status_code}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 17, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "CPU Usage",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_cpu_seconds_total",
          "legendFormat": "CPU Seconds",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 17, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Memory Usage (RSS)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "legendFormat": "RSS Memory",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 23, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Event Loop Lag",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "nodejs_eventloop_lag_seconds",
          "legendFormat": "Event Loop Lag",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 23, "w": 12, "h": 6 }
    }
  ],
  "templating": { "list": [] }
}
