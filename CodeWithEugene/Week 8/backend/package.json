{
  "name": "deployhub-backend",
  "version": "1.0.0",
  "description": "DeployHub backend service with observability and CI/CD",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint .",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "ci": "npm run lint && npm run test",
    "docker:build": "docker build -t deployhub-backend .",
    "docker:run": "docker run -p 3000:3000 deployhub-backend"
  },
  "keywords": [
    "ci",
    "cd",
    "observability",
    "express",
    "prometheus"
  ],
  "author": "DeployHub Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "prom-client": "^15.1.3",
    "winston": "^3.14.2"
  },
  "devDependencies": {
  "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  }
}
